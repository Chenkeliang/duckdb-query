# Interactive Data Query - Environment Variables Example
# Copy this file to .env and update the values as needed

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================

# API URL for frontend to connect to backend
# Development: http://localhost:8000
# Production: https://your-api-domain.com
VITE_API_URL=http://localhost:8000

# UI Mode (modern/classic)
REACT_APP_UI_MODE=modern

# Enable development features
REACT_APP_DEBUG=false

# =============================================================================
# BACKEND CONFIGURATION  
# =============================================================================

# Environment mode
ENV=development

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Default database connections (optional)
# Uncomment and configure as needed

# PostgreSQL
# POSTGRES_HOST=localhost
# POSTGRES_PORT=5432
# POSTGRES_DB=dataquery
# POSTGRES_USER=dataquery
# POSTGRES_PASSWORD=your_password

# MySQL
# MYSQL_HOST=localhost
# MYSQL_PORT=3306
# MYSQL_DB=dataquery
# MYSQL_USER=dataquery
# MYSQL_PASSWORD=your_password

# =============================================================================
# FILE STORAGE CONFIGURATION
# =============================================================================

# Upload directory for temporary files
UPLOAD_DIR=./temp_files

# Maximum file size (in bytes, default: 100MB)
MAX_FILE_SIZE=104857600

# Allowed file extensions (comma-separated)
ALLOWED_EXTENSIONS=csv,xlsx,xls,json,parquet

# =============================================================================
# DUCKDB CONFIGURATION
# =============================================================================

# DuckDB memory limit (default: 2GB)
DUCKDB_MEMORY_LIMIT=2GB

# DuckDB thread count (default: auto-detect)
DUCKDB_THREADS=4

# Enable DuckDB extensions
DUCKDB_ENABLE_EXTENSIONS=true

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Secret key for session management (generate a secure random string)
SECRET_KEY=your-secret-key-here

# JWT settings (if implementing authentication)
# JWT_SECRET=your-jwt-secret
# JWT_ALGORITHM=HS256
# JWT_EXPIRATION=3600

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log file path (optional)
# LOG_FILE=./logs/app.log

# Enable request logging
LOG_REQUESTS=true

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================

# Query timeout (seconds)
QUERY_TIMEOUT=300

# Maximum rows to return in a single query
MAX_QUERY_ROWS=10000

# Enable query result caching
ENABLE_CACHING=true

# Cache TTL (seconds)
CACHE_TTL=3600

# =============================================================================
# DOCKER CONFIGURATION
# =============================================================================

# Docker-specific environment variables
# These are automatically set when using Docker

# DOCKER_ENV=true
# CONTAINER_NAME=dataquery

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Enable hot reload for development
RELOAD=true

# Enable debug mode
DEBUG=false

# Profiling (for performance analysis)
ENABLE_PROFILING=false

# =============================================================================
# EXTERNAL SERVICES (Optional)
# =============================================================================

# Redis (for caching and session storage)
# REDIS_URL=redis://localhost:6379

# Email service (for notifications)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password

# Cloud storage (for file uploads)
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_BUCKET_NAME=your-bucket-name
# AWS_REGION=us-east-1

# =============================================================================
# MONITORING AND ANALYTICS (Optional)
# =============================================================================

# Application monitoring
# SENTRY_DSN=your-sentry-dsn

# Analytics
# GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX

# Health check endpoint
HEALTH_CHECK_ENABLED=true

# =============================================================================
# NOTES
# =============================================================================

# 1. Never commit .env files to version control
# 2. Use strong, unique passwords for production
# 3. Generate secure random strings for secrets
# 4. Update CORS_ORIGINS for production deployment
# 5. Configure proper database credentials for production
# 6. Enable HTTPS in production environments
