# 前端开发环境Dockerfile
FROM node:18-alpine

# 设置工作目录
WORKDIR /app

# 设置环境变量
ENV NODE_ENV=development
ENV REACT_APP_UI_MODE=modern

# 安装系统依赖
RUN apk add --no-cache \
    git \
    curl \
    && rm -rf /var/cache/apk/*

# 复制package文件
COPY package*.json ./

# 安装依赖
RUN npm ci --only=development

# 安装现代化UI所需的额外依赖
RUN npm install \
    @fontsource/inter \
    ag-grid-react \
    ag-grid-community \
    react-window \
    react-window-infinite-loader \
    recharts

# 复制源代码
COPY . .

# 创建必要的目录结构
RUN mkdir -p src/theme src/components/Layout src/components/DataSource src/components/Query src/components/Results src/components/DatabaseManager src/components/ExportManager src/styles

# 创建简化的入口文件
RUN echo "import React from 'react';" > src/index.js && \
    echo "import ReactDOM from 'react-dom/client';" >> src/index.js && \
    echo "import App from './App';" >> src/index.js && \
    echo "import '@fontsource/inter/400.css';" >> src/index.js && \
    echo "import '@fontsource/inter/500.css';" >> src/index.js && \
    echo "import '@fontsource/inter/600.css';" >> src/index.js && \
    echo "import '@fontsource/inter/700.css';" >> src/index.js && \
    echo "" >> src/index.js && \
    echo "const root = ReactDOM.createRoot(document.getElementById('root'));" >> src/index.js && \
    echo "root.render(<App />);" >> src/index.js

# 暴露端口
EXPOSE 3000

# 健康检查
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:3000 || exit 1

# 启动开发服务器
CMD ["npm", "start"]
